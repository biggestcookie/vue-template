{
  "name": "vue-ts-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "npm run lint:format && npm run lint:fix",
    "lint:format": "prettier --log-level warn --write src/**/*.{js,ts,vue,css,scss,md,json}",
    "lint:fix": "eslint ./src --ext .js,.ts,.vue --quiet --fix"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^14.2.1",
    "@vueuse/integrations": "^14.2.1",
    "bulma": "^1.0.4",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.8.0",
    "pinia": "^3.0.4",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vue": "^3.5.28",
    "vue-eslint-parser": "^10.4.0",
    "vue-router": "^5.0.3",
    "vue-tsc": "^3.2.4"
  },
  "prettier": {
    "singleQuote": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "trailingComma": "es5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "npm": "^11.10.1"
  }
}
